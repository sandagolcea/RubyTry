<h1>Listing zombies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Graveyard</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zombies.each do |zombie| %>
      <tr>
        <td><%= zombie.name %></td>
        <td><%= zombie.graveyard %></td>
        <td><%= link_to 'Show', zombie %></td>
        <td><%= link_to 'Edit', edit_zombie_path(zombie) %></td>
        <td><%= link_to 'Destroy', zombie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
	
	<% zombies = Zombie.all %>
	<ul>
	  <% zombies.each do |zombie| %>

	      <% if zombie.tweets.count > 1 %>
	      <li>
	        <%= zombie.name %>
			<em>SMART ZOMBIE</em>
	      </li>
		  <% end %>
	     
	  <% end %>
	</ul>
	
<br>

